<%- include('../partials/header.html'); %>

<div class="container">

    <!-- show campground -->
    <h1><%=campground.name%></h1>
    <img src="<%=campground.image%>" alt="">
    <p id="desc"><%=campground.description%></p>
    
    <!-- edit or delete campground -->
    <a href="<%=campground._id%>/edit" class="btn btn-outline-warning btn-sm">
        Edit
    </a>
    <form action="<%=campground._id%>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-outline-danger btn-sm" value="Delete">
    </form>

    <!-- show comments -->
    <div class="jumbotron" style="padding-top: 16px">
        <h2 style="padding-bottom: 16px">Comments!</h2>
        <% campground.comments.forEach(function(comment){ %>
            <p><strong><%=comment.author%></strong></p>
            <p><%=comment.text%></p>
    <!-- edit or delete comment -->
            <a href="<%=campground._id%>/comment/<%=comment._id%>/edit" class="btn btn-outline-warning btn-sm">edit</a>
            <form action="<%=campground._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-outline-danger btn-sm" value="delete">
            </form>
            <hr>
        <%})%>
    <!-- create comment -->
        <form action="/campgrounds/<%=campground._id%>/comment" method="POST">
            <input type="text" name="comment[author]" placeholder="author">
            <input type="text" name="comment[text]" placeholder="text" >
            <input class="btn btn-primary btn-sm" type="submit" value="Create Comment">
        </form>
    </div>

    


</div>


<%- include('../partials/footer.html'); %>